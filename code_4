//Missing number from an array
#include<iostream>
#include<vector>
using namespace std;
    int missingNumber(vector<int> & nums)
    {
        int range = nums.size();
        int actualsum=(range*(range+1))/2;
        int currentsum=0;
        for(int i=0;i<nums.size();i++)
        {
            currentsum=currentsum+nums[i];
        }
        int ans=actualsum-currentsum;
        return ans;    
    }
 int main()
 {
    {
    int n;
    cout << "Enter the size of array (n): ";
    cin >> n;

    vector<int> nums(n);
    cout << "Enter " << n << " numbers (from 0 to n, one missing): ";
    for (int i = 0; i < n; i++)
    {
        cin >> nums[i];
    }

    cout << "Missing number: " << missingNumber(nums) << endl;

    return 0;
}
     
 }
